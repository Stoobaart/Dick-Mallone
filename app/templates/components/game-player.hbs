{{#if gameStarted}}
  <div class="game-container">
    {{#scene-scripts
      as |scripts scene previousScene convo convoOption startAScene playerSpeach npcSpeach speakClear|
    }}
      {{#player-actions
        scene=scene
        previousScene=previousScene
        scripts=scripts
        componentName=componentName
        playerSpeach=(action playerSpeach)
        speakClear=(action speakClear)
        convo=(action convo)
        as |walk thingClicked helper clearHelper verb helperText changeScene|
      }}
        {{player-speach speakClear=(action speakClear)}}
        {{component componentName
          scene=scene
          walk=(action walk)
          thingClicked=(action thingClicked)
          changeScene=(action changeScene)
          helper=(action helper)
          clearHelper=(action clearHelper)
          convo=(action convo)
          convoOption=(action convoOption)
          startAScene=(action startAScene)
          playerSpeach=(action playerSpeach)
          npcSpeach=(action npcSpeach)
          speakClear=(action speakClear)
          verb=verb
        }}
        {{menu-area
          scene=scene
          verb=verb
          helperText=helperText
          scripts=scripts
          playerSpeach=(action playerSpeach)
          helper=(action helper)
          clearHelper=(action clearHelper)
        }}
      {{/player-actions}}
    {{/scene-scripts}}
  </div>
{{else}}
  {{#if initialised}}
    {{start-screen gameStarted=gameStarted}}
  {{else}}
    <button class="initialiseButton mainBtn" {{action (mut initialised) true}}>Play game</button>
  {{/if}}
{{/if}}