<section class="scene-screen">
  <section class="scene">
    <img class="station-scene" src="/images/policeStationInterior.png">
    <div id="car" class="exit-station thing" data-name="Exit" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>

    <div id="npcJen" class="npc">
      <img class="jenSprite" src="/images/jen.png">
    </div>
    <div id="Jen" class="thing jen" data-name="Jen" data-type="person" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>

    <div class="wall-corner"></div>

    <div id="water-cooler" class="thing water-cooler" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>
    <div id="notice-board" pickupable="true" class="thing notice-board" data-name="paper" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>

    <div class="paper">
      {{#unless pickedupblankpaper}}
        <img class="paperImg" src="/sprites/pinnedPaper.png">
        <div id="paper" class="thing" data-name="blank-paper" pickupable="true" use="crackhead" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>
      {{/unless}}
    </div>

    <div id="filing-cabinets" class="thing filing-cabinets" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>

    <div id="interrogation-room" class="thing interrogation-door" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>
    {{#if paperUsed}}
      <div id="analysis-room" class="thing analysis-door" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>
    {{else}}
      <div id="closed-analysis-room" class="thing analysis-door" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseout={{action clearHelper}}></div>
    {{/if}}

    <section class="walkable-area stationscene" {{action walk}}></section>

    {{jen-speach speakClear=(action speakClear)}}
    <section class="options station">
      <p id="aboutCrackHead" onclick={{action convoOption}}>Any trouble from the crack head?</p>
      <p id="aboutJenkins" onclick={{action convoOption}}>Got any messages from Jenkins?</p>
      <p id="bye" onclick={{action convoOption}}>Chat to ya later, Jen</p>
    </section>
  </section>
</section>