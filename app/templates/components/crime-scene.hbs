<section class="scene-screen">
  <section class="scene">
    <img class="scene-one" src="/images/SceneOne.png">
    <div id="victim" class="thing" data-name="Victim's body" onclick={{action thingClicked}} onmouseover={{action helper}} onmouseover={{action helper}}></div>
    <div id="shards" class="thing" data-name="Bloody shards" pickupable="true" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div id="head" class="thing" data-name="Victim's head" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div id="car" class="thing" data-name="Dick-mobile" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div id="brokenwindow" class="thing" data-name="Broken Window" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div id="handprint" class="thing" data-name="Bloody hand print" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div id="urine" class="thing" data-name="Urine puddle" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div id="syringe" class="thing" data-name="Syringe" onclick={{action thingClicked}} onmouseover={{action helper}}></div>
    <div class="walkable-area" {{action walk}}></div>
    {{rodriguez-sprite 
      thingClicked=(action thingClicked)
      helper=(action helper)
      verb=verb
    }}
    {{rodriguez-speach}}
    <section class="options">
      <p id="theVictim" onclick={{action convoOption}}>Tell me about the victim</p>
      <p id="suspects" onclick={{action convoOption}}>Any suspects?</p>
      <p id="witnesses" onclick={{action convoOption}}>Any witnesses?</p>
      <p id="bye" onclick={{action convoOption}}>Chat to ya later, Hot Rod</p>
    </section>
    <div class="rain-container">
      <img class="rain" src="/sprites/rain.png">
    </div>
    
  </section>
